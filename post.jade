extends base
block title
	title= post.title
block content
	.post_panel
		h1(style="text-align:center;margin-bottom:10px;")= post.title
		.date= post.date.format("%Y-%m-%d %H:%M")
		.tags
			for tag in post.tags
				span.tag_item
					a(href="/tags/{{tag}}")= tag
		.content= post.content
	if pre_one
		a.pre(href='{{pre_one.url}}#main') &lt; {{ pre_one.title }}
	if next_one
		a.next(href='{{next_one.url}}#main') {{ next_one.title }} &gt;
	posthash = get_hash(post.full_path)
	.ds-thread(data-thread-key="{{posthash}}", data-title="{{post.title}}", data-url="http://{{site.domain}}/{{post.url}}")

	script
		var duoshuoQuery = {short_name:"dracula"};
		(function() {
			var ds = document.createElement('script');
			ds.type = 'text/javascript';ds.async = true;
			ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
			ds.charset = 'UTF-8';
			(document.getElementsByTagName('head')[0] 
			 || document.getElementsByTagName('body')[0]).appendChild(ds);
		})();

block side_content
	if post.toc
		div.side_frame.post_toc= post.toc
	include include/weibo_show
	include include/tag_cloud_count
