html
	head
		meta(name="keywords", content=site.configs.keywords.escaped)
		meta(name="description", content=site.raw_content.escaped)
		block title
			title= request.args.s or post.title or tags.join('+') or category.title or site.title
		load('fonts /template/blog/basic.scss /template/blog/style.scss')
	body
		#body_wrapper
			if site.configs.cover and has(site.configs.cover)
				site_cover = site.configs.cover
			else
				site_cover = '/farbox_free_image.jpg'
			#header.header(style="background-image: url({{site_cover}}?height=428&width=1280&fixed=true)")
				.header_wrapper
					h1.title
						a(href='/')= site.title
					ul.nav
						li
							a(href="/") Home
						if has('Photos')
							li
								a(href='/album') Albums
							if not has('posts')
								+redirect('/album')
						if has('categories')
							li
								a(href='/categories') Categories
						if has('posts')
							li
								a(href='/archive') Archive
						if site.tags
							li
								a(href='/archive?use=tags') Tags
						pages = get_data(status='pages', type='post', limit=5, with_page=False, sort='position')
						for page_p in pages
							li
								a(href="/{{page_p.path}}")= page_p.filename.split('.')[0].title()
						li
							a(href="/feed") RSS
					.description_panel= site.raw_content
			.left_frame
				.container
					block content
			.right_frame
				.side_container
					block side_content
			.clear
			#footer
				.powered_by
					a(href="https://www.farbox.com", target="_blank") Powered By FarBox.com
					a(href="/admin") Admin
					span Â©2012-2015 Z.R.E.Y Inc.
